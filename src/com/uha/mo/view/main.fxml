<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uha.mo.view.MainController">
   <children>
      <VBox fx:id="fenetre" maxHeight="720.0" prefHeight="720.0">
          <children>
              <ToolBar fx:id="menuBar" nodeOrientation="RIGHT_TO_LEFT" prefWidth="0.0">
                  <items>
                  <HBox spacing="10.0">
                     <children>
                            <StackPane>
                                <children>
                                    <ImageView fx:id="exitButton" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../../images/delete.png" />
                                        </image>
                                    </ImageView>
                                </children>
                                <padding>
                                    <Insets right="10.0" />
                                </padding>
                            </StackPane>

                            <StackPane>
                                <children>
                                    <ImageView fx:id="settingsButton" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@../../../../images/settings.png" />
                                        </image>
                                    </ImageView>
                                </children>

                                <padding>
                                    <Insets right="10.0" />
                                </padding>
                            </StackPane>
                     </children>
                  </HBox>
                  </items>

                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
              </ToolBar>

              <ScrollPane fx:id="scrollPane" prefHeight="0.0" style="-fx-focus-color: transparent;" VBox.vgrow="ALWAYS">
      
                  <HBox fx:id="accounts" prefHeight="${scrollPane.height}" spacing="10.0" style="-fx-background-color: #ecf0f1;" />
      
              </ScrollPane>
      
          </children>
      </VBox>
   </children>
</StackPane>
